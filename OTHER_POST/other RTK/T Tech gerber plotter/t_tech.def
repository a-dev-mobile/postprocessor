MACHINE GENERIC_MACHINE

FORMATTING
{

 WORD_SEPARATOR     " "
 END_OF_LINE        ""
# SEQUENCE Seq_no 1 1 1

 FORMAT  Block_num  "&__6_00"
 FORMAT  Coordinate "&__6_00"
 FORMAT  zero_coord "&_01_0_"
 FORMAT  Socket     "%02d"

 ADDRESS N {
		  FORMAT Block_num
		  FORCE	 off
		     }
 ADDRESS G { 
        FORMAT Socket
        FORCE off
           }
 ADDRESS D { 
        FORMAT Socket
        FORCE off
           }
 ADDRESS APERTURA { 
        FORMAT Socket
        FORCE off
        LEADER "G54 D"
           }
 ADDRESS X {
        FORMAT Coordinate
        ZERO_FORMAT zero_coord
        FORCE off
           }
 ADDRESS Y {
        FORMAT Coordinate
        ZERO_FORMAT zero_coord
        FORCE off
           }
 ADDRESS I {
        FORMAT Coordinate
        ZERO_FORMAT zero_coord
        FORCE off
           }
 ADDRESS J {
        FORMAT Coordinate
        ZERO_FORMAT zero_coord
        FORCE off
           }
 

 BLOCK_TEMPLATE Seq_no	{N [$mom_seqnum] }

 BLOCK_TEMPLATE Linear  {
          G[$mom_sys_linear_code]
          X[$mom_pos(0) * 1000]
          Y[$mom_pos(1) * 1000]
          D[$mom_sys_light_code($mom_sys_light_status)]
          }
 BLOCK_TEMPLATE Circle_CLW  {
          G[$mom_sys_circle_code_CLW]
          X[$mom_pos(0) * 1000]
          Y[$mom_pos(1) * 1000]
          I[$mom_pos_arc_center(0) * 1000]
          J[$mom_pos_arc_center(1) * 1000]
          D[$mom_sys_light_code($mom_sys_light_status)]
          }
 BLOCK_TEMPLATE Circle_CCLW {
          G[$mom_sys_circle_code_CCLW]
          X[$mom_pos(0) * 1000]
          Y[$mom_pos(1) * 1000]
          I[$mom_pos_arc_center(0) * 1000]
          J[$mom_pos_arc_center(1) * 1000]
          D[$mom_sys_light_code($mom_sys_light_status)]
          }
 BLOCK_TEMPLATE Light  { D[$mom_sys_light_code($mom_sys_light_status)] }
 BLOCK_TEMPLATE Apertura  { APERTURA[$mom_tool_number] }
}



